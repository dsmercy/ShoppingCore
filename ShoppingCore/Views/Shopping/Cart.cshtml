@model IEnumerable<ShoppingCore.Models.Tbl_Product>
@{
    ViewData["Title"] = "Cart";
}
<style>
    .cart-wrapper .cart-items .remove {
        width: 80px;
        float: left;
        padding: 3px 0px 5px 8px;
        margin: 38px 0px 0 -8px;
        background-color: darkred;
        border-radius: 10px;
    }
    .item-image p {
    font-size: large;
    }
</style>
<!-- BEGIN .main-content-wrapper -->
<div class="main-content-wrapper">

    <!-- BEGIN .cart-wrapper -->
    <div class="cart-wrapper"  ng-app="cart" ng-controller="cartcontroller">
        <div class="main-title">
            <p class="custom-font-1">Shopping cart</p>
            <a href="Home/Catalog" class="continue">continue shopping</a>
        </div>

        <div class="cart-titles">
            <p class="item-image" style="font-size:larger">Product name</p>
            <p class="quantity" style="font-size:larger">Quantity</p>
            <p class="price" style="font-size:larger">Price</p>
        </div>
        <form class="clearfix">
            
            <div class="cart-items">

                    <div class="row" ng-repeat="cart in cartlist">
                        <div class="item-image">
                            <div class="image-wrapper-1">
                                <div class="image">
                                    <a href="/Home/ProductDetails/{{cart.productId}}">
                                    <img  ng-src="{{path}}{{cart.productImage}}" alt="Item Image" 
                                         style="height: 94px;position: absolute;left: -39px;top: 0px;width: 180px;"></a>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="desc">
                            <h3 class="custom-font-1"><a href="/Home/ProductDetails/{{cart.productId}}">{{cart.productName}}</a></h3>

                        </div>
                        <div class="quantity">
                            <input type="text" readonly="readonly" class="input-text-1 count" name="quantity" value="{{cart.totalProduct}}">                            
                            <a href="javascript:void(0)" ng-click="AddtoCart(cart.productId)" class="button-1 custom-font-1 trans-1 plus"><span></span></a>
                            <a href="javascript:void(0)" ng-click="RemoveCart(cart.productId)" class="button-1 custom-font-1 trans-1 minus"><span></span></a>
                        </div>
                        <div class="price custom-font-1">
                            <span class="money">{{cart.priceSale*cart.totalProduct}}</span>
                        </div>
                        <div class="remove">
                            <a href="javascript:void(0)" ng-click="RemoveCart(cart.productId)" style="color:#5ed400">remove</a>
                        </div>
                        <div class="clear"></div>
                    </div>


                <div class="row">
                    <div class="note">
                        <div>
                            <p><b>Note for the seller:</b></p>
                            <p>(optional)</p>
                        </div>
                        <textarea class="textarea-1" id="notes" name="note"></textarea>
                    </div>
                    <div class="total">
                        <div class="checkout">
                            <p>
                                <s>Total payment:</s>
                                <b class="custom-font-1"><span class="money">{{totalPrice}}.00</span></b>
                            </p>
                           
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
    <p style="float:right">
        <a class="button-3 custom-font-1 trans-1" href="/Shopping/Checkout"><span>Proceed to checkout</span></a>    </p>
    <div class="clear"></div>
    <!-- END .cart-wrapper -->
</div>


